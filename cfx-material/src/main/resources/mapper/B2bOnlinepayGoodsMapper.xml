<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="cn.cf.dao.B2bOnlinepayGoodsDao">


	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		pk,name,shotName,isVisable,isDelete,bankPk,bankName
	    ]]>
	</sql>

	<insert id="insert" useGeneratedKeys="true"
		keyProperty="pk">
    <![CDATA[
        INSERT INTO b2b_onlinepay_goods (
         pk, name, shotName, isVisable, isDelete, bankPk, bankName
        ) VALUES (
         #{pk}, #{name}, #{shotName}, #{isVisable}, #{isDelete}, #{bankPk}, #{bankName}        
        )
    ]]>
	</insert>

	<update id="update" parameterType="cn.cf.model.B2bOnlinepayGoods">
    <![CDATA[
        UPDATE b2b_onlinepay_goods SET
	        name = #{name} , shotName = #{shotName} , isVisable = #{isVisable} , isDelete = #{isDelete} , bankPk = #{bankPk} , bankName = #{bankName}  
        WHERE 
        	pk = #{pk}  	        
    ]]>
	</update>

	<delete id="delete" parameterType="cn.cf.model.B2bOnlinepayGoods">
    <![CDATA[
        DELETE FROM b2b_onlinepay_goods WHERE
        pk = #{id} 
    ]]>
	</delete>

	<sql id="searchGridWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
			<if test="@Ognl@isNotEmpty(pk)">
				AND pk = #{pk}			</if>
			<if test="@Ognl@isNotEmpty(name)">
				AND name = #{name}			</if>
			<if test="@Ognl@isNotEmpty(shotName)">
				AND shotName = #{shotName}			</if>
			<if test="@Ognl@isNotEmpty(isVisable)">
				AND isVisable = #{isVisable}			</if>
			<if test="@Ognl@isNotEmpty(isDelete)">
				AND isDelete = #{isDelete}			</if>
			<if test="@Ognl@isNotEmpty(bankPk)">
				AND bankPk = #{bankPk}			</if>
			<if test="@Ognl@isNotEmpty(bankName)">
				AND bankName = #{bankName}			</if>
		</where>
	</sql>

	<select id="searchGridCount" parameterType="java.util.Map"
		resultType="int">
		SELECT count(*) FROM b2b_onlinepay_goods
		<include refid="searchGridWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="searchGrid" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods
		<include refid="searchGridWhere" />
	</select>
	<select id="searchList" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods
		<include refid="searchGridWhere" />
	</select>
	<select id="getByPk" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods where pk = #{pk}	</select>
	<select id="getByName" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods where name = #{name}	</select>
	<select id="getByShotName" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods where shotName = #{shotName}	</select>
	<select id="getByBankPk" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods where bankPk = #{bankPk}	</select>
	<select id="getByBankName" resultType="cn.cf.dto.B2bOnlinepayGoodsDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods where bankName = #{bankName}	</select>
</mapper>

