<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="cn.cf.dao.SysHelpsCategoryDao">


	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		pk,name,insertTime,isDelete,isVisable,sort,showType,showPlace
	    ]]>
	</sql>

	<insert id="insert" useGeneratedKeys="true"
		keyProperty="pk">
    <![CDATA[
        INSERT INTO sys_helps_category (
         pk, name, insertTime, isDelete, isVisable, sort, showType ,showPlace
        ) VALUES (
         #{pk}, #{name}, #{insertTime}, #{isDelete}, #{isVisable}, #{sort}, #{showType}, #{showPlace}    
        )
    ]]>
	</insert>

	<update id="update" parameterType="cn.cf.model.SysHelpsCategory">
    <![CDATA[
        UPDATE sys_helps_category SET
	        name = #{name} , insertTime = #{insertTime} , isDelete = #{isDelete} , isVisable = #{isVisable} , sort = #{sort} , showType = #{showType}, showPlace = #{showPlace}  
        WHERE 
        	pk = #{pk}  	        
    ]]>
	</update>

	<delete id="delete" parameterType="cn.cf.model.SysHelpsCategory">
    <![CDATA[
        DELETE FROM sys_helps_category WHERE
        pk = #{id} 
    ]]>
	</delete>

	<sql id="searchGridWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
			<if test="@Ognl@isNotEmpty(pk)">
				AND pk = #{pk}			</if>
			<if test="@Ognl@isNotEmpty(name)">
				AND name = #{name}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeBegin)">
				AND insertTime >= #{insertTimeBegin}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeEnd)">
				AND insertTime &lt;= #{insertTimeEnd}			</if>
			<if test="@Ognl@isNotEmpty(isDelete)">
				AND isDelete = #{isDelete}			</if>
			<if test="@Ognl@isNotEmpty(isVisable)">
				AND isVisable = #{isVisable}			</if>
			<if test="@Ognl@isNotEmpty(sort)">
				AND sort = #{sort}			</if>
			<if test="@Ognl@isNotEmpty(showType)">
				AND showType = #{showType}			</if>
			<if test="showPlace != null and showPlace != ''">
				AND showPlace like '%${showPlace}%'
			</if>
		</where>
	</sql>

	<select id="searchGridCount" parameterType="java.util.Map"
		resultType="int">
		SELECT count(*) FROM sys_helps_category
		<include refid="searchGridWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="searchGrid" resultType="cn.cf.dto.SysHelpsCategoryDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sys_helps_category
		<include refid="searchGridWhere" />
		order by sort asc ,insertTime DESC
		<if test="limit != null">
			limit #{start},#{limit}
		</if>
	</select>
	
	<select id="searchList" resultType="cn.cf.dto.SysHelpsCategoryDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sys_helps_category
		<include refid="searchGridWhere" />
	</select>
	<select id="getByPk" resultType="cn.cf.dto.SysHelpsCategoryDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sys_helps_category where pk = #{pk}	</select>
	<select id="getByName" resultType="cn.cf.dto.SysHelpsCategoryDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sys_helps_category where name = #{name}	</select>
</mapper>

