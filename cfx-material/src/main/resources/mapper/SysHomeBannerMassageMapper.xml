<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="cn.cf.dao.SysHomeBannerMassageDao">


	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		pk,isDelete,isVisable,sort,type,url,productnamePk,insertTime,updateTime,linkUrl
	    ]]>
	</sql>

	<insert id="insert" useGeneratedKeys="true"
		keyProperty="pk">
    <![CDATA[
        INSERT INTO sys_home_bannermassage (
         pk, isDelete, isVisable, sort, type, url, productnamePk, insertTime, updateTime,linkUrl
        ) VALUES (
         #{pk}, #{isDelete}, #{isVisable}, #{sort}, #{type}, #{url}, #{productnamePk}, #{insertTime}, #{updateTime} ,#{linkUrl}       
        )
    ]]>
	</insert>

	<update id="update" parameterType="cn.cf.model.SysHomeBannerMassage">
    <![CDATA[
        UPDATE sys_home_bannermassage SET
	        isDelete = #{isDelete} , isVisable = #{isVisable} , sort = #{sort} , type = #{type} , url = #{url} , productnamePk = #{productnamePk} , insertTime = #{insertTime} , updateTime = #{updateTime}  
        WHERE 
        	pk = #{pk}  	        
    ]]>
	</update>

	<delete id="delete" parameterType="cn.cf.model.SysHomeBannerMassage">
    <![CDATA[
        DELETE FROM sys_home_bannermassage WHERE
        pk = #{id} 
    ]]>
	</delete>

	<sql id="searchGridWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
			<if test="@Ognl@isNotEmpty(pk)">
				AND pk = #{pk}			</if>
			<if test="@Ognl@isNotEmpty(isDelete)">
				AND isDelete = #{isDelete}			</if>
			<if test="@Ognl@isNotEmpty(isVisable)">
				AND isVisable = #{isVisable}			</if>
			<if test="@Ognl@isNotEmpty(sort)">
				AND sort = #{sort}			</if>
			<if test="@Ognl@isNotEmpty(type)">
				AND type = #{type}			</if>
			<if test="@Ognl@isNotEmpty(url)">
				AND url = #{url}			</if>
			<if test="@Ognl@isNotEmpty(linkUrl)">
				AND linkUrl = #{linkUrl}			</if>
			<if test="@Ognl@isNotEmpty(productnamePk)">
				AND productnamePk = #{productnamePk}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeBegin)">
				AND insertTime >= #{insertTimeBegin}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeEnd)">
				AND insertTime &lt;= #{insertTimeEnd}			</if>
			<if test="@Ognl@isNotEmpty(updateTimeBegin)">
				AND updateTime >= #{updateTimeBegin}			</if>
			<if test="@Ognl@isNotEmpty(updateTimeEnd)">
				AND updateTime &lt;= #{updateTimeEnd}			</if>
		</where>
	</sql>

	<select id="searchGridCount" parameterType="java.util.Map"
		resultType="int">
		SELECT count(*) FROM sys_home_bannermassage
		<include refid="searchGridWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="searchGrid" resultType="cn.cf.dto.SysHomeBannerMassageDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sys_home_bannermassage
		<include refid="searchGridWhere" />
		<if test="orderName != null">
			order by ${orderName} ${orderType}
		</if>
		<if test="limit != null and limit !=''">
			limit #{start},#{limit}
		</if>
	</select>
	<select id="searchList" resultType="cn.cf.dto.SysHomeBannerMassageDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sys_home_bannermassage
		<include refid="searchGridWhere" />
		<if test="orderName != null">
			order by ${orderName} ${orderType}
		</if>
	</select>
	<select id="getByPk" resultType="cn.cf.dto.SysHomeBannerMassageDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sys_home_bannermassage where pk = #{pk}	</select>
	<select id="getByUrl" resultType="cn.cf.dto.SysHomeBannerMassageDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sys_home_bannermassage where url = #{url}	</select>
	<select id="getByProductnamePk" resultType="cn.cf.dto.SysHomeBannerMassageDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sys_home_bannermassage where productnamePk = #{productnamePk}	</select>
</mapper>

