<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="cn.cf.dao.SxSpecDao">


	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		pk,name,insertTime,updateTime,sort,isVisable
	    ]]>
	</sql>

	<insert id="insert" useGeneratedKeys="true"
		keyProperty="pk">
    <![CDATA[
        INSERT INTO sx_spec (
         pk, name, insertTime, updateTime, sort,isVisable
        ) VALUES (
         #{pk}, #{name}, #{insertTime}, #{updateTime}, #{sort},#{isVisable}
        )
    ]]>
	</insert>

	<update id="update" parameterType="cn.cf.model.SxSpec">
    <![CDATA[
        UPDATE sx_spec SET
	        name = #{name} , insertTime = #{insertTime} , updateTime = #{updateTime} , sort = #{sort} ,#{isVisable}
        WHERE 
        	pk = #{pk}  	        
    ]]>
	</update>

	<delete id="delete" parameterType="cn.cf.model.SxSpec">
    <![CDATA[
        DELETE FROM sx_spec WHERE
        pk = #{id} 
    ]]>
	</delete>

	<sql id="searchGridWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
		1=1
			<if test="@Ognl@isNotEmpty(pk)">
				AND pk = #{pk}			</if>
			<if test="@Ognl@isNotEmpty(name)">
				AND name = #{name}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeBegin)">
				AND insertTime >= #{insertTimeBegin}			</if>
			<if test="@Ognl@isNotEmpty(insertTimeEnd)">
				AND insertTime &lt;= #{insertTimeEnd}			</if>
			<if test="@Ognl@isNotEmpty(updateTimeBegin)">
				AND updateTime >= #{updateTimeBegin}			</if>
			<if test="@Ognl@isNotEmpty(updateTimeEnd)">
				AND updateTime &lt;= #{updateTimeEnd}			</if>
			<if test="@Ognl@isNotEmpty(sort)">
				AND sort = #{sort}			</if>
			<if test="@Ognl@isNotEmpty(isVisable)">
				AND isVisable = #{isVisable}			</if>
		</where>
	</sql>

	<select id="searchGridCount" parameterType="java.util.Map"
		resultType="int">
		SELECT count(*) FROM sx_spec
		<include refid="searchGridWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="searchGrid" resultType="cn.cf.dto.SxSpecDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sx_spec
		<include refid="searchGridWhere" />
	</select>
	<select id="searchList" resultType="cn.cf.dto.SxSpecDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM sx_spec
		<include refid="searchGridWhere" />
	</select>
	<select id="getByPk" resultType="cn.cf.dto.SxSpecDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sx_spec where pk = #{pk}	</select>
	<select id="getByName" resultType="cn.cf.dto.SxSpecDto"
		parameterType="java.lang.String">
		SELECT
		<include refid="columns" />
		FROM sx_spec where name = #{name}	</select>
</mapper>

