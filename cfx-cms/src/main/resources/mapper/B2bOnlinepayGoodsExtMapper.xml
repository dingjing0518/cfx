<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="cn.cf.dao.B2bOnlinepayGoodsExtDao">


	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		pk,name,shotName,isVisable,isDelete,bankPk,bankName
	    ]]>
	</sql>

	<update id="updateObj" parameterType="cn.cf.dto.B2bOnlinepayGoodsExtDto">

        UPDATE b2b_onlinepay_goods
        <set>
			<if test="name != null and name != ''">
				name = #{name} ,
			</if>
			<if test="shotName != null and shotName != ''">
				shotName = #{shotName} ,
			</if>
			<if test="isVisable != null and isVisable != ''">
				isVisable = #{isVisable} ,
			</if>
			<if test="isDelete != null and isDelete != ''">
				isDelete = #{isDelete} ,
			</if>
			<if test="bankPk != null and bankPk != ''">
				bankPk = #{bankPk} ,
			</if>
			<if test="bankName != null and bankName != ''">
				bankName = #{bankName} ,
			</if>
		</set>
        WHERE 
        	pk = #{pk}
	</update>
	<sql id="searchGridWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
			<if test="@Ognl@isNotEmpty(pk)">
				AND pk = #{pk}			</if>
			<if test="@Ognl@isNotEmpty(name)">
				AND name = #{name}			</if>
			<if test="@Ognl@isNotEmpty(shotName)">
				AND shotName = #{shotName}			</if>
			<if test="@Ognl@isNotEmpty(isVisable)">
				AND isVisable = #{isVisable}			</if>
			<if test="@Ognl@isNotEmpty(isDelete)">
				AND isDelete = #{isDelete}			</if>
			<if test="@Ognl@isNotEmpty(bankPk)">
				AND bankPk = #{bankPk}			</if>
			<if test="@Ognl@isNotEmpty(bankName)">
				AND bankName = #{bankName}			</if>
		</where>
	</sql>

	<select id="searchGridExtCount" parameterType="java.util.Map"
		resultType="int">
		SELECT count(*) FROM b2b_onlinepay_goods
		<include refid="searchGridWhere" />

	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="searchGridExt" resultType="cn.cf.dto.B2bOnlinepayGoodsExtDto"
		parameterType="java.util.Map">
		SELECT
		<include refid="columns" />
		FROM b2b_onlinepay_goods
		<include refid="searchGridWhere" />
		<if test="orderName != null and orderName!=''">
			ORDER BY ${orderName} ${orderType}
		</if>
		<if test="limit != null  and limit!=''  and limit>0">
			limit #{start}, #{limit}
		</if>
	</select>
</mapper>

